#!/usr/bin/env bash

set -e

KDISTR="$HOME/k-framework/k-distribution/bin"
FLAGS=()

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

if [[ "$1" == "typecheck" ]]; then
    shift

    if [[ "$1" == "debug" ]]; then
        FLAGS+=("--log")
        FLAGS+=("--log-cells")
        FLAGS+=("(k),(#pc),#result,(typeEnv)")
        shift # Clear out the debug argument
    fi

    set -x
    "$KDISTR/krun" --directory "static/" "${FLAGS[@]}" "$@"
elif [[ "$1" == "test" ]]; then
    shift

    fname=""

    for arg in "$@"; do
        if [[ ! "$arg" =~ "^--" ]]; then
            fname="$arg"
            break
        fi
    done

    if [[ -z "$fname" ]]; then
        echo "No filename specified!"
        exit 1
    fi

    FLAGS+=("--pattern")
    if [[ -e "$fname.pat" ]]; then
        FLAGS+=("$(cat "$fname.pat")")
    else
        FLAGS+=("<k> . </k>")
    fi
    to_run=("$KDISTR/krun" "${FLAGS[@]}" --directory "dynamic/" "$@")
    printf "'%s' " "${to_run[@]}"
    echo
    result="$("${to_run[@]}")"
    if [[ "$result" == "#False" ]]; then
        echo -e "${RED}[ERROR] $fname failed${NC}"
        exit 1
    else
        echo -e "${GREEN}[INFO] $fname passed${NC}"
    fi
else
    if [[ "$1" == "debug" ]]; then
        FLAGS+=("--log")
        FLAGS+=("--log-cells")
        FLAGS+=("(k),(#pc),#result,(storage),(lookup),(localTypeEnv)")
        shift # Clear out the debug argument
    fi

    set -ex
    "$KDISTR/krun" --directory "dynamic/" "${FLAGS[@]}" "$@"
fi

