#!/usr/bin/env bash

set -e

KDISTR="$HOME/k-framework/k-distribution/bin"
FLAGS=()

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

directory="dynamic/"

if [[ "$1" == "typecheck" ]]; then
    shift
    directory="static/"

    if [[ "$1" == "debug" ]]; then
        FLAGS+=("--log")
        FLAGS+=("--log-cells")
        FLAGS+=("(k),(#pc),#result,(typeEnv)")
        shift # Clear out the debug argument
    fi
else
    if [[ "$1" == "debug" ]]; then
        FLAGS+=("--log")
        FLAGS+=("--log-cells")
        FLAGS+=("(k),(#pc),#result,(storage),(lookup),(localTypeEnv)")
        shift # Clear out the debug argument
    fi
fi

if [[ "$1" == "test" ]]; then
    shift

    fname=""

    for arg in "$@"; do
        if [[ ! "$arg" =~ "^--" ]]; then
            fname="$arg"
            break
        fi
    done

    if [[ -z "$fname" ]]; then
        echo "No filename specified!"
        exit 1
    fi

    FLAGS+=("--pattern")
    if [[ -e "$fname.pat" ]]; then
        FLAGS+=("$(cat "$fname.pat")")
    else
        FLAGS+=("<k> . </k>")
    fi
    to_run=("$KDISTR/krun" "${FLAGS[@]}" --directory "$directory" "$@")
    printf "'%s' " "${to_run[@]}"
    echo
    result="$("${to_run[@]}")"

    if echo "$fname" | grep -qE "\-fail.flow$"; then
        if [[ "$result" == "#False" ]]; then
            echo -e "${GREEN}[INFO] $fname passed${NC}"
        else
            echo -e "${RED}[ERROR] $fname failed${NC}"
            exit 1
        fi
    else
        if [[ "$result" == "#False" ]]; then
            echo -e "${RED}[ERROR] $fname failed${NC}"
            exit 1
        else
            echo -e "${GREEN}[INFO] $fname passed${NC}"
        fi
    fi
else
    set -x
    "$KDISTR/krun" --directory "$directory" "${FLAGS[@]}" "$@"
fi

