contract Ballot {
    type Voter is unique immutable asset address
    type ProposalName is unique immutable asset string

    chairperson : address
    voters : set Voter
    proposals : linking ProposalName <=> set Voter

    transaction giveRightToVote(voter : address):
        only when msg.sender = chairperson
        new Voter(voter) --> voters



    transaction vote(proposal : string):
        voters --[ msg.sender ]-> proposals[proposal]
}

