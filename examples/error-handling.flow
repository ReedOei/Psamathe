// Old system:
transaction T():
    A --[ s ]-> B

    on success:
        emit Transfer()
    on fail:
        revert('Error')

// Old system, handle block:
transaction T():
    handle {
        A --[ s ]-> B
    } with {
        on success:
            emit Transfer()
        on fail:
            revert('Error')
    }

// Check with if statement:
transaction T():
    if s in A then
        A --[ s ]-> B
    else
        revert('Error')

// If success:
transaction T():
    if success: A --[ s ]--> B then
        emit Transfer()
    else
        revert('Error')

// Try-catch:
transaction T():
    try {
        A --[ s ]-> B
    } catch (Err) {
        revert('Error')
    }
    emit Transfer()

